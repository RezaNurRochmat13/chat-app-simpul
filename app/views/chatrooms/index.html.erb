<div class="max-w-md mx-auto mt-10 p-6 bg-white rounded-xl shadow-md">
  <h1 class="text-3xl font-bold text-center mb-6 text-blue-600">Chatrooms</h1>

  <ul class="mb-6 space-y-2">
    <% @chatrooms.each do |room| %>
      <li>
        <%= link_to room.name, room, class: "block px-4 py-2 bg-gray-100 hover:bg-blue-100 rounded transition duration-200" %>
      </li>
    <% end %>
  </ul>

  <%= form_with(model: @chatroom, local: true, class: "flex gap-2") do |form| %>
    <%= form.text_field :name, placeholder: "New chatroom name", class: "flex-1 p-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-400" %>
    <%= form.submit "Create", class: "px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 transition duration-200" %>
  <% end %>
</div>
